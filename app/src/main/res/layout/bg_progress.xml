<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBgPgs"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:max="100"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtVCProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/progressBgPgs"
            android:layout_alignTop="@+id/progressBgPgs"
            android:layout_alignEnd="@+id/progressBgPgs"
            android:layout_alignBottom="@+id/progressBgPgs"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Testprogress"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>